<ContentContainer>
  <div class="flex flex-wrap">
    {{#each @model.images as |image|}}
      <div class="w-1/3 m-auto">
        <img class="object-cover" src="http://{{ image }}">
      </div>
    {{/each}}
  </div>
  <h1> {{ @model.name }}</h1>
  <p>{{ @model.description }}</p>
  <div class="m-4">
    <p>{{ @model.address_line_1 }}</p>
    <p>{{ @model.address_line_2 }}</p>
    <p>{{ @model.address_line_3 }}</p>
    <p>{{ @model.address_line_4 }}</p>
    <p>{{ @model.address_postcode }}</p>
  </div>

  <div class="w-100 bg-gray-900 -mx-4 p-4 text-light">
    <h2>Book a Table:</h2>
    <BookTableForm @pub={{ @model }}></BookTableForm>
  </div>
</ContentContainer>
