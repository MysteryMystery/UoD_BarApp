<div class="grid grid-cols-4 gap-2">
  <div class="col-span-4 md:col-span-1">
    <label>
      <p class="font-bold">Name:</p>
      <p class="text-sm">This will be used to identify you when you arrive.</p>
    </label>
    <Input id="email" {{ on "input" this.setField}} {{ on "change" this.getBookingTimes }}></Input>
  </div>
  <div class="col-span-4 md:col-span-1">
    <label>
      <p class="font-bold">Number of people:</p>
      <p class="text-sm">&nbsp;</p>
    </label>
    <Input id="table_capacity" type="number" step="1" min="1" max="99" value="{{ this.table_capacity }}" {{ on "input" this.setField}} {{ on "change" this.getBookingTimes }}></Input>
  </div>
  <div class="col-span-4 md:col-span-1">
    <label>
      <p class="font-bold">Date:</p>
      <p class="text-sm">&nbsp; {{ this.date }}</p>
    </label>
    <Input id="date" type="date" value="{{ this.date }}" {{ on "input" this.setField}} {{ on "change" this.getBookingTimes }}></Input>
  </div>
  <div class="col-span-4 md:col-span-1">
    <label>
      <p class="font-bold">Pick a time:</p>
      <p class="text-sm">We will fit you in where we can!</p>
    </label>
    <select id="booking_time" class="w-full border rounded-md p-2 text-gray-900" {{ on "change" this.setField }}>
      {{#each this.booking_times as |booking_time| }}
        <option value="{{ booking_time }}">{{ booking_time }}</option>
      {{/each}}
    </select>
  </div>

  {{#each (repeat 3) as |count|}}
    <div></div>
  {{/each}}
  <div class="col-span-4 md:col-span-1">
    <button class="py-2 px-3 block w-full bg-primary hover:bg-secondary transition ease-in-out duration-500" {{ on "click" this.submit }}>Book</button>
  </div>
</div>