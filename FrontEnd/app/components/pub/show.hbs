{{#if this.session.isLoggedIn}}
  <div class="flex flex-wrap justify-end">
    <div class="w-1/4 md:w-1/10 p-1">
      <a class="block w-full py-2 px-2 text-center transition-all ease-in-out duration-500 hover:bg-secondary bg-primary" href="javascript:void(0)">Edit</a>
    </div>
    <div class="w-1/4 md:w-1/10 py-1">
      <a class="block w-full py-2 px-2 text-center transition-all ease-in-out duration-500 hover:bg-secondary bg-primary" href="/dashboard/pubs/{{ @pub.id }}/bookings">Bookings</a>
    </div>
  </div>
{{/if}}

{{log this.session.isLoggedIn}}

<div class="flex flex-wrap">
  {{#each @pub.images as |image|}}
    <div class="w-1/3 m-auto">
      <img class="object-cover" src="http://{{ image }}">
    </div>
  {{/each}}
</div>
<h1> {{ @pub.name }}</h1>
<p>{{ @pub.description }}</p>
<div class="m-4">
  <p>{{ @pub.address_line_1 }}</p>
  <p>{{ @pub.address_line_2 }}</p>
  <p>{{ @pub.address_line_3 }}</p>
  <p>{{ @pub.address_line_4 }}</p>
  <p>{{ @pub.address_postcode }}</p>
</div>

<div class="w-100 bg-gray-900 -mx-4 p-4 text-light">
  <h2>Book a Table:</h2>
  <BookTableForm @pub={{ @pub }}></BookTableForm>
</div>