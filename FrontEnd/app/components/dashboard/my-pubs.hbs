<h1 class="text-lg">My Pubs</h1>
<hr>
<div class="py-2">
  <div class="text-right">
    <Link @type="primary" @href="dashboard/pubs/create">New Pub</Link>
  </div>
  <div class="flex flex-wrap">
    {{#each this.pubs as |pub|}}
      <div class="w-full sm:w-1/3 md:w-1/6 h-12">
        <Link @href="/pubs/{{ pub.id }}" @sharp="true" class="block"> {{pub.name}} </Link>
      </div>
    {{/each}}
  </div>
</div>